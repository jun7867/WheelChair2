<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MenuScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/back_b"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="#ffaf43"
                android:visibility="visible"
                app:srcCompat="@drawable/back_arrow" />

            <ImageView
                android:id="@+id/logo"
                android:layout_width="235dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorAccent" />

            <ImageButton
                android:id="@+id/menu_b"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/colorAccent"
                android:visibility="invisible"
                app:srcCompat="@drawable/menu" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="fill_vertical"
        android:text="  설명서"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible"
        android:background="@color/menu_tab" />

    <Button
        android:id="@+id/pictogram"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/pictogram"
        tools:background="@drawable/pictogram"
        android:onClick="prepare"/>
        <!--android:onClick="picto"/>-->

    <Button
        android:id="@+id/instruction"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/tutorial"
        android:onClick="prepare"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="fill_vertical"
        android:text="  버전"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible"
        android:background="@color/menu_tab" />

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/version" />

</LinearLayout>